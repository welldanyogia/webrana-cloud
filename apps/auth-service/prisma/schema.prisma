// Prisma schema for Auth Service
// Database: PostgreSQL
// Schema: auth

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ===========================================
// ENUMS
// ===========================================

enum UserRole {
  customer
  admin
  super_admin
}

enum UserStatus {
  pending_verification
  active
  suspended
  deleted
}

enum VerificationTokenType {
  email_verification
  password_reset
}

// ===========================================
// MODELS
// ===========================================

model User {
  id                    String    @id @default(uuid()) @db.Uuid
  email                 String    @unique @db.VarChar(255)
  passwordHash          String    @map("password_hash") @db.VarChar(255)
  fullName              String    @map("full_name") @db.VarChar(255)
  phoneNumber           String?   @map("phone_number") @db.VarChar(50)
  role                  UserRole  @default(customer)
  status                UserStatus @default(pending_verification)
  timezone              String    @default("UTC") @db.VarChar(100)
  language              String    @default("en") @db.VarChar(10)
  lastLoginAt           DateTime? @map("last_login_at") @db.Timestamptz
  lastPasswordChangeAt  DateTime? @map("last_password_change_at") @db.Timestamptz
  legacyId              String?   @map("legacy_id") @db.VarChar(255)
  legacySource          String?   @map("legacy_source") @db.VarChar(50)
  createdAt             DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt             DateTime  @updatedAt @map("updated_at") @db.Timestamptz

  refreshTokens       RefreshToken[]
  verificationTokens  VerificationToken[]
  userMfa             UserMfa?

  @@index([email])
  @@index([status])
  @@index([role])
  @@index([legacyId])
  @@map("users")
}

model RefreshToken {
  id          String    @id @default(uuid()) @db.Uuid
  userId      String    @map("user_id") @db.Uuid
  tokenHash   String    @unique @map("token_hash") @db.VarChar(255)
  deviceInfo  String?   @map("device_info") @db.VarChar(500)
  ipAddress   String?   @map("ip_address") @db.VarChar(45)
  expiresAt   DateTime  @map("expires_at") @db.Timestamptz
  revokedAt   DateTime? @map("revoked_at") @db.Timestamptz
  createdAt   DateTime  @default(now()) @map("created_at") @db.Timestamptz

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokenHash])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

model VerificationToken {
  id          String                @id @default(uuid()) @db.Uuid
  userId      String                @map("user_id") @db.Uuid
  tokenHash   String                @unique @map("token_hash") @db.VarChar(255)
  type        VerificationTokenType
  expiresAt   DateTime              @map("expires_at") @db.Timestamptz
  usedAt      DateTime?             @map("used_at") @db.Timestamptz
  createdAt   DateTime              @default(now()) @map("created_at") @db.Timestamptz

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([tokenHash])
  @@index([type])
  @@map("verification_tokens")
}

// Prepared for future 2FA implementation
model UserMfa {
  id          String    @id @default(uuid()) @db.Uuid
  userId      String    @unique @map("user_id") @db.Uuid
  totpSecret  String?   @map("totp_secret") @db.VarChar(255)
  enabled     Boolean   @default(false)
  backupCodes String[]  @map("backup_codes")
  lastUsedAt  DateTime? @map("last_used_at") @db.Timestamptz
  createdAt   DateTime  @default(now()) @map("created_at") @db.Timestamptz
  updatedAt   DateTime  @updatedAt @map("updated_at") @db.Timestamptz

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_mfa")
}
