# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/billing_service

# Server
PORT=3004
NODE_ENV=development

# CORS
CORS_ORIGINS=http://localhost:4200,http://localhost:4201

# ═══════════════════════════════════════════════════════════════════════════════
# JWT Authentication
# ═══════════════════════════════════════════════════════════════════════════════
#
# PRODUCTION (Default): RS256 + Public Key
# - JWT_ALGORITHM=RS256 (default)
# - JWT_PUBLIC_KEY=<RSA Public Key dalam format PEM>
#
# DEVELOPMENT/LOCAL (Optional): HS256 + Secret
# - JWT_ALGORITHM=HS256
# - JWT_SECRET=<shared secret>
#
# ═══════════════════════════════════════════════════════════════════════════════

# Production config
JWT_ALGORITHM=RS256
JWT_PUBLIC_KEY=your-jwt-public-key-here

# Development config (uncomment for local dev with HS256)
# JWT_ALGORITHM=HS256
# JWT_SECRET=dev-secret-for-development-only

# Internal API (for admin/webhook endpoints)
INTERNAL_API_KEY=your-internal-api-key-here

# ═══════════════════════════════════════════════════════════════════════════════
# Tripay Payment Gateway
# ═══════════════════════════════════════════════════════════════════════════════
# Get credentials from https://tripay.co.id/member/merchant
# Mode: sandbox | production
# ═══════════════════════════════════════════════════════════════════════════════

TRIPAY_MODE=sandbox
TRIPAY_API_KEY=DEV-xxx
TRIPAY_PRIVATE_KEY=xxx
TRIPAY_MERCHANT_CODE=T12345

# Tripay API URLs (auto-set based on mode, override if needed)
# TRIPAY_BASE_URL=https://tripay.co.id/api-sandbox

# ═══════════════════════════════════════════════════════════════════════════════
# Service URLs
# ═══════════════════════════════════════════════════════════════════════════════

ORDER_SERVICE_URL=http://localhost:3003
ORDER_SERVICE_TIMEOUT_MS=5000

# ═══════════════════════════════════════════════════════════════════════════════
# Invoice Settings
# ═══════════════════════════════════════════════════════════════════════════════

# Invoice expiry in hours (default: 24)
INVOICE_EXPIRY_HOURS=24
