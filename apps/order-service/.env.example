# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/order_service

# Service URLs
CATALOG_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001
BILLING_SERVICE_URL=http://localhost:3003
NOTIFICATION_SERVICE_URL=http://localhost:3005
CATALOG_SERVICE_TIMEOUT_MS=5000
NOTIFICATION_SERVICE_TIMEOUT_MS=5000

# ═══════════════════════════════════════════════════════════════════════════════
# JWT Authentication (PRD FR21)
# ═══════════════════════════════════════════════════════════════════════════════
#
# PRODUCTION (Default): RS256 + Public Key
# - JWT_ALGORITHM=RS256 (default, tidak perlu diset jika sudah RS256)
# - JWT_PUBLIC_KEY=<RSA Public Key dalam format PEM>
# - JWT ditandatangani auth-service dengan private key, order-service verify dengan public key
#
# DEVELOPMENT/LOCAL (Optional): HS256 + Secret
# - JWT_ALGORITHM=HS256
# - JWT_SECRET=<shared secret>
# - HANYA untuk development/testing lokal, JANGAN dipakai di production!
#
# ═══════════════════════════════════════════════════════════════════════════════

# Production config (uncomment dan isi public key untuk production)
JWT_ALGORITHM=RS256
JWT_PUBLIC_KEY=your-jwt-public-key-here

# Development config (uncomment untuk local dev dengan HS256)
# JWT_ALGORITHM=HS256
# JWT_SECRET=dev-secret-for-development-only

# Internal API (untuk admin endpoints)
INTERNAL_API_KEY=your-internal-api-key-here

# DigitalOcean
DIGITALOCEAN_API_TOKEN=your-do-api-token-here
DIGITALOCEAN_DEFAULT_REGION=sgp1

# ═══════════════════════════════════════════════════════════════════════════════
# Encryption (for DO token encryption - V13 Multi-Account Support)
# ═══════════════════════════════════════════════════════════════════════════════
# Required for encrypting DO API tokens stored in database
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# IMPORTANT: Keep this secret and never commit the actual value!
ENCRYPTION_KEY=your-64-char-hex-encryption-key-here

# Provisioning
PROVISIONING_POLL_INTERVAL_MS=5000
PROVISIONING_MAX_ATTEMPTS=60

# Server
PORT=3003
NODE_ENV=development

# CORS
CORS_ORIGINS=http://localhost:4200,http://localhost:4201
